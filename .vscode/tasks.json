{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Customize Build",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "&",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "<",
                "${fileDirname}/input.txt",
                ">",
                "${fileDirname}/output.txt"
				
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
			"detail": "Generated task by vscode",
			"options":{
				"shell":{
					"executable": "cmd.exe",
					
				}
			}
			
        },
    ]
}
